<div class="container-login">
  <div class="row login-logo">
    <img src="<%= image_url('Logo.svg') %>" >
  </div>
  <div class="row login-grid">
    <div class="col login-wrap">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>
        <div class="form-group-login">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-login rounded-left dashed"%>
        </div>
        <div class="form-group-login">
          <%= f.label :password, "Senha" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control-login rounded-left dashed" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="check">
            <%= f.check_box :remember_me, class:"checkbox-primary" %>
            <%= f.label :remember_me, "  Manter-me conectado"  %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Entrar" %>
        </div>
      <% end %>
      <div class="form-group">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
