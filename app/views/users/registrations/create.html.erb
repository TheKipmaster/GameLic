<section class="ftco-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section"><img src="<%= image_url('Logo.svg') %>" ></h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="login-wrap p-4 p-md-5">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
            <div class="form-group">
              <%= f.label :name, "Nome Completo: " %>
              <%= f.text_field :name, autofocus: true, class: "form-control rounded-left dashed", placeholder:"(Ex: Joaquim Alves da Silva)"%>
            </div>
            <div class="form-group">
              <%= f.label :institution, "Instituição" %>
              <%= f.text_field :institution, class:"form-control rounded-left dashed" %>
            </div>
            <div class="form-group">
              <%= f.label :registration_number, "Matrícula" %>
              <%= f.text_field :registration_number, class:"form-control rounded-left dashed" %>
            </div>
            <div class="form-group">
              <%= f.label :age, "Idade" %>
              <%= f.number_field :age , class:"form-control rounded-left dashed" %>
            </div>
            <div class="form-group">
              <%= f.label :nickname, "Apelido" %>
              <%= f.text_field :nickname , class:"form-control rounded-left dashed"%>
            </div>
            <div class="actions text-center">
              <%= f.submit "Finalizar" %>
            </div>
          <% end %>
          <div class="form-group">
            <%= render "users/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
