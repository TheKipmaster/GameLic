<div class="container">
  <div class="login-logo">
    <img src="<%= image_url('Logo.png') %>" >
  </div>
  <div class="login-grid">
    <div class="login-wrap">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="form-group-login my-1">
            <%= f.label :email, "E-mail" %><br>
            <%= f.email_field :email, autocomplete: "email", class: "form-control rounded-left dashed"%>
          </div>
          <div class="form-group-login my-1">
            <%= f.label :password, "Senha" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br>
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control rounded-left dashed" %>
          </div>
          <div class="form-group-login my-1">
            <%= f.label :password_confirmation, "Confirmar Senha" %><br>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control rounded-left dashed" %>
          </div>
          <div class="actions-cadastrar">
            <%= f.submit "Cadastrar"%>
          </div>
        <% end %>
      <div class="form-group">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>