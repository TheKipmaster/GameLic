<section class="ftco-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section"><img src="<%= image_url('Logo.svg') %>" ></h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="login-wrap p-4 p-md-5">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
            <div class="form-group">
              <%= f.label :email, "E-mail" %><br />
              <%= f.email_field :email, autocomplete: "email", class: "form-control rounded-left dashed"%>
            </div>
            <div class="form-group">
              <%= f.label :password, "Senha" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control rounded-left dashed" %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, "Confirmar Senha" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control rounded-left dashed" %>
            </div>
            <div class="actions text-right">
              <%= f.submit "Cadastrar"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
