<div class="container-fluid" >
  <div class="row">
    <div class="col-sm-10 h-auto col-md-10 offset-md-1">
      <div class="card body15">
        <div class="narratives-header">
          <h1>MIDIOTECA</h1>
        </div>
        <div class="row mx-5">
          <div class="col-sm-3 mt-5">
            <h3 class="mx-4">Atividades</h3>
          </div>
          <div class="col-sm-9">
            <div class="row">
            <% @narratives.each do |narrative| %>
              <div class="card mx-2 my-2 " style="width: 18rem; border-radius: 16px">
                <% if narrative.cover.attached? %>
                  <%= image_tag(narrative.cover, class:"card-img-top px-4 py-2 w-100") %>
                <% else %>
                  <img src="https://bootdey.com/img/Content/avatar/avatar2.png" class="card-img-top px-4 py-2 w-100">
                <% end %>
                <div class="card-body text-center">
                  <h2><%= narrative.title %></h2>
                </div>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>